{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@helpers/*": ["helpers/*"],
      "@mcp/*": ["mcp/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
